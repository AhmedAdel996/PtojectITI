@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class=" row justify-content-center auth">
    <div class="col-md-6 justify-content-center ">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item w-50">
                        <a class="nav-link text-dark text-center" aria-current="true" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                    </li>

                    <li class="nav-item w-50">
                        <a class="nav-link text-dark text-center" aria-current="true" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("scripts", false)
<script>
    $(function () {
        var current = this.location.pathname;
        $(".nav-tabs li a").each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active')
            }
        })
    })

</script>
}
